---
# package tasks file for {{ role_name }}
{%- set refnode_role_name = role_name.split('.') %}

- name: Ensure package {{ refnode_role_name[1] }} is present
  package:
    name: "{{ '{{' }} {{ refnode_role_name[1] }}_package_name {{ '}}' }}"
    state: "{{ '{{' }} {{ refnode_role_name[1] }}_package_state {{ '}}' }}"
  tags:
    - package
