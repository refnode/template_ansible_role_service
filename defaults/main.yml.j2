---
# defaults file for {{ role_name }}
{%- set refnode_role_name = role_name.split('.') %}

# defaults for tasks/repository
{{ refnode_role_name[1] }}_repository_gpgcheck: "yes"
{{ refnode_role_name[1] }}_repository_enabled: "no"

# defaults for tasks/package
{{ refnode_role_name[1] }}_package_name: "{{ refnode_role_name[1] }}"
{{ refnode_role_name[1] }}_package_state: "present"

# defaults for tasks/config
{{ refnode_role_name[1] }}_config_dir: "{{ '{{ os_sysconfdir }}' }}/{{ refnode_role_name[1] }}"
{{ refnode_role_name[1] }}_config_file: "{{ '{{' }} {{ refnode_role_name[1] }}_config_dir {{ ' }}' }}/{{ refnode_role_name[1] }}.conf"

# defaults for tasks/firewall
{{ refnode_role_name[1] }}_firewall_enabled: 'no'

# defaults for tasks/service, also used for handlers/
{{ refnode_role_name[1] }}_service_name: "{{ refnode_role_name[1] }}"
{{ refnode_role_name[1] }}_service_enabled: "yes"
{{ refnode_role_name[1] }}_service_state: "started"

